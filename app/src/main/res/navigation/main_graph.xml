<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/selectionFragment">
    <!--    Aqui Se navega entre los Fragments  -->
    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.oimg.paseaasturias.ui.selection.SelectionFragment"
        android:label="fragment_selection"
        tools:layout="@layout/fragment_selection" >
        <action
            android:id="@+id/action_selectionFragment_to_selectionDetailActivity"
            app:destination="@id/selectionDetailActivity" />

    </fragment>
    <fragment
        android:id="@+id/pursuitsFragment"
        android:name="com.oimg.paseaasturias.ui.pursuits.PursuitsFragment"
        android:label="fragment_pursuits"
        tools:layout="@layout/fragment_pursuits" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.oimg.paseaasturias.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <activity
        android:id="@+id/selectionDetailActivity"
        android:name="com.oimg.paseaasturias.ui.detail.SelectionDetailActivity"
        android:label="activity_selection_detail"
        tools:layout="@layout/activity_selection_detail"/>



</navigation>